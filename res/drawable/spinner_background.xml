<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/blue_pelorus" />
                    <padding android:left="5dp" android:top="5dp" android:right="2dp" android:bottom="5dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:src="@drawable/drop_down" />
            </item>
        </layer-list>
    </item>
</selector>
